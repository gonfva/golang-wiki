{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
    "name": "wikis",
    "labels": {
      "name": "wikis"
    }
  },
  "spec": {
    "replicas": 3,
    "selector": {
      "name": "wikis"
    },
    "template": {
      "metadata": {
        "labels": {
          "name": "wikis",
          "deployment": "WERCKER_GIT_COMMIT"
        }
      },
      "spec": {
        "containers": [
          {
            "imagePullPolicy": "Always",
            "image": "registry.hub.docker.com/gonfva/golang-wiki:WERCKER_GIT_COMMIT",
            "name": "wikis",
            "ports": [
              {
                "name": "http-server",
                "containerPort": 8080,
                "protocol": "TCP"
              }
            ]
          }
        ]
      }
    }
  }
}
